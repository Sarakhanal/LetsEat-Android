<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.uc.letseat">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Lets Eat"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetsEat"
        android:usesCleartextTraffic="true">

        <!-- Launcher -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Customer screens -->
        <activity android:name=".ui.SignupActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.HotelListActivity" />
        <activity android:name=".ui.MenuActivity" />
        <activity android:name=".ui.CartActivity" />
        <activity android:name=".ui.CheckoutActivity" />
        <activity android:name=".ui.OrderStatusActivity" />

        <!-- ✅ DRIVER SCREENS -->
        <activity android:name=".driver.DriverLoginActivity" />
        <activity android:name=".driver.DriverHomeActivity" />

        <!-- ✅ OWNER SCREENS -->
        <activity android:name=".owner.OwnerLoginActivity" />
        <activity android:name=".owner.OwnerDashboardActivity" />

    </application>

</manifest>
