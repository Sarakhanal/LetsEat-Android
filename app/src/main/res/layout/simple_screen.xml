<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Owner!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Restaurant Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:radius="8dp">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Restaurant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRestaurantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Not set"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRestaurantRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 0.0"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Manage Menu Button -->
        <Button
            android:id="@+id/btnManageMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Menu"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- View Orders Button -->
        <Button
            android:id="@+id/btnViewOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Orders"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Fix ownerId Button (to auto add ownerId in Firestore) -->
        <Button
            android:id="@+id/btnFixOwnerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fix OwnerID (Click Once)"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
